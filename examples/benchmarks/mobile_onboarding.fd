# Mobile Onboarding â€” Mobile Designer use case
# Demonstrates: frames with clip, column layouts, animations, style reuse

style phone_frame {
  fill: #1A1A2E
  corner: 40
}

style screen_bg {
  fill: #FFFFFF
  corner: 32
}

style dot_active {
  fill: #6C5CE7
  corner: 6
}

style dot_inactive {
  fill: #D1D5DB
  corner: 6
}

style cta_primary {
  fill: #6C5CE7
  corner: 12
}

# Screen 1 â€” Welcome
frame @screen_welcome {
  w: 280 h: 520
  use: phone_frame
  clip: true
  x: 60 y: 60

  group @welcome_content {
    layout: column gap=24 pad=32
    use: screen_bg

    rect @welcome_illustration {
      w: 216 h: 180
      fill: #EDE9FE
      corner: 16
      text "ðŸŽ¨" {
        font: "Inter" regular 64
        fill: #6C5CE7
      }
    }

    text @welcome_title "Design Anywhere" {
      font: "Inter" bold 22
      fill: #1A1A2E
    }

    text @welcome_desc "Create beautiful designs on the go with an intuitive canvas experience." {
      font: "Inter" regular 14
      fill: #6B7280
    }

    # Page dots
    group @dots_1 {
      layout: row gap=8
      rect { w: 24 h: 6; use: dot_active }
      rect { w: 6 h: 6; use: dot_inactive }
      rect { w: 6 h: 6; use: dot_inactive }
    }

    rect @welcome_cta {
      w: 216 h: 48
      use: cta_primary
      text "Get Started" {
        font: "Inter" semibold 15
        fill: #FFFFFF
      }
      anim :hover {
        scale: 1.03
        ease: spring 200ms
      }
    }
  }
}

