# Connections — CEO to VPs
edge @ceo_to_eng {
  from: @ceo_card
  to: @vp_eng_card
  stroke: #D1D5DB 2
  arrow: end
  curve: step
}

edge @ceo_to_design {
  from: @ceo_card
  to: @vp_design_card
  stroke: #D1D5DB 2
  arrow: end
  curve: step
}

edge @ceo_to_product {
