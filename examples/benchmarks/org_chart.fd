# Org Chart — HR / Manager use case
# Demonstrates: edges, nested groups, ellipse avatars, named colors

style person_card {
  fill: #FFFFFF
  corner: 12
}

style role_badge {
  corner: 4
}

# CEO level
group @ceo_card {
  layout: column gap=4 pad=16
  use: person_card
  shadow: (0,2,8,#0000001A)
  x: 380 y: 40
  ellipse @ceo_avatar {
    w: 40 h: 40
    fill: purple
    opacity: 0.15
  }
  text @ceo_name "Sarah Chen" {
    font: "Inter" semibold 16
    fill: #111827
  }
  rect @ceo_role {
    w: 140 h: 24
    use: role_badge
    fill: purple
    text "Chief Executive Officer" {
      font: "Inter" medium 11
      fill: #FFFFFF
    }
  }
}

# VP level
group @vp_eng_card {
