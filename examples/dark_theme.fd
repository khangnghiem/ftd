# ─── Settings panel ───────────────────────────────────────────────────────
group @settings {
  group @header {
    text @title "Settings" {
      fill: #FFFFFF  # white
      font: "Inter" bold 24
    }
    rect @close_btn {
      text @close_icon "×" {
        fill: #999999  # gray
        font: "Inter" regular 20
      }
      w: 36 h: 36
      fill: #2D2D44  # blue
      corner: 18
      when :hover {
        fill: #3D3D5C  # blue
        ease: ease_out 150ms
      }
    }
  }
  rect @profile_card {
    group @profile_row {
      ellipse @user_avatar {
        spec "User profile photo"
        w: 48 h: 48
        fill: #6C5CE7  # blue
      }
      group @user_info {
        text @user_name "Khang Nghiem" {
          fill: #FFFFFF  # white
          font: "Inter" semibold 16
        }
        text @user_email "khang@fastdraft.io" {
          use: dark_muted
        }
      }
    }
    w: 344 h: 80
    use: dark_card
    x: 259.37
    y: 69.15
  }
  text @pref_label "Preferences" {
    fill: #6B7280  # blue
    font: "Inter" semibold 13
  }
  rect @toggle_dark {
    group @dark_row {
      group @dark_info {
        text @dark_desc "Reduce eye strain" {
          use: dark_muted
        }
        group @_group_0 {
          text @dark_label "Dark Mode" {
            use: dark_text
          }
        }
      }
      rect @switch_on {
        spec "Toggle — ON state"
        ellipse @switch_knob_on {
          w: 20 h: 20
          fill: #FFFFFF  # white
          x: 241.99
          y: -12.34
        }
        w: 44 h: 24
        fill: #6C5CE7  # blue
        corner: 12
      }
      x: -0.31
      y: -3.2
    }
    w: 344 h: 56
    use: dark_card
    when :hover {
      fill: #353550  # blue
      ease: ease_out 150ms
    }
  }
  text @display_label "Display" {
    fill: #6B7280  # blue
    font: "Inter" semibold 13
  }
  x: 281.88
  y: 350.68
}

rect @toggle_notif {
  group @_group_0 {
    group @notif_row {
      group @notif_info {
        text @notif_label "Notifications" {
          use: dark_text
        }
      }
      rect @switch_off {
        spec "Toggle — OFF state"
        ellipse @switch_knob_off {
          w: 20 h: 20
          fill: #6B7280  # blue
        }
        w: 44 h: 24
        fill: #3D3D5C  # blue
        corner: 12
      }
    }
  }
  w: 344 h: 56
  use: dark_card
  x: 358.85
  y: 28.77
  when :hover {
    fill: #353550  # blue
    ease: ease_out 150ms
  }
}

text @notif_desc "Push and email alerts" {
  use: dark_muted
  x: 430.48
  y: -115.78
}

text @danger_label "Danger Zone" {
  fill: #E17055  # red
  font: "Inter" semibold 13
  x: 416.37
  y: 280.57
}

