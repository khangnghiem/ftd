rect @brightness_card {
  group @brightness_row {
    text @brightness_label "Brightness" {
      use: dark_text
    }
    rect @slider_track {
      ellipse @slider_thumb {
        w: 16 h: 16
        fill: #A29BFE  # blue
      }
      w: 312 h: 4
      fill: #3D3D5C  # blue
      corner: 2
    }
    x: 118.03
    y: -199.92
  }
  w: 344 h: 72
  use: dark_card
  x: 324.17
  y: 496.43
}

rect @btn_delete {
  spec {
    "Destructive action — delete account"
    accept: "confirmation dialog before proceeding"
    priority: high
  }
  w: 344 h: 48
  fill: #E1705520  # red
  stroke: #E17055 1
  corner: 10
  x: 305.5
  y: 601.84
  when :hover {
    fill: #E1705540  # red
    ease: ease_out 150ms
  }
  when :press {
    scale: 0.97
    ease: ease_out 100ms
  }
}

text @delete_label "Delete Account" {
  fill: #E17055  # red
  font: "Inter" semibold 14
  x: 335.15
  y: 300.99
}

