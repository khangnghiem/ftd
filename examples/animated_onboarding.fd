# â”€â”€â”€ Themes â”€â”€â”€

theme cta {
  fill: #6C5CE7  # blue
  corner: 12
}

theme cta_text {
  fill: #FFFFFF  # white
  font: "Inter" semibold 16
}

theme step_bg {
  fill: #FFFFFF  # white
  corner: 16
}

theme step_body {
  fill: #6B7280  # blue
  font: "Inter" regular 16
}

theme step_title {
  fill: #1F2937  # blue
  font: "Inter" bold 24
}

# â”€â”€â”€ Layout â”€â”€â”€

# â”€â”€â”€ Steps â”€â”€â”€
frame @step_1 {
  text @welcome_title "Welcome to FastDraft ðŸŽ¨" {
    use: step_title
  }
  text @welcome_body "Design at the speed of thought. Write .fd files and watch your ideas come to life." {
    use: step_body
  }
  rect @start_btn {
    text @start_text "Get Started" {
      use: cta_text
    }
    w: 200 h: 48
    use: cta
    when :hover {
      fill: #5A4BD1  # blue
      scale: 1.05
      ease: spring 200ms
    }
    when :press {
      scale: 0.97
      ease: ease_out 100ms
    }
  }
  w: 360 h: 280
  use: step_bg
  shadow: (0,4,24,#00000015)
  when :enter {
    opacity: 1
    ease: ease_out 600ms
  }
}

frame @step_2 {
  text @tools_title "Powerful Tools ðŸ› ï¸" {
    use: step_title
  }
  text @tools_body "Draw shapes, add animations, and build responsive layouts â€” all from a simple text file." {
    use: step_body
  }
  rect @tools_btn {
    text @tools_text "Try Drawing" {
      use: cta_text
    }
    w: 200 h: 48
    use: cta
    when :hover {
      fill: #5A4BD1  # blue
      scale: 1.05
      ease: spring 200ms
    }
  }
  w: 360 h: 280
  use: step_bg
  shadow: (0,4,24,#00000015)
  when :enter {
    opacity: 1
    ease: ease_out 600ms
  }
}

frame @step_3 {
  text @collab_title "AI-Native Design âœ¨" {
    use: step_title
  }
  text @collab_body "Your AI assistant reads .fd files natively. Describe what you want and let AI build it." {
    use: step_body
  }
  rect @done_btn {
    text @done_text "Start Creating" {
      use: cta_text
    }
    w: 200 h: 48
    fill: #22C55E  # green
    corner: 12
    when :hover {
      fill: #16A34A  # green
      scale: 1.05
      ease: spring 200ms
    }
  }
  w: 360 h: 280
  use: step_bg
  shadow: (0,4,24,#00000015)
  when :enter {
    opacity: 1
    ease: ease_out 600ms
  }
}

text @_step_1_to_2_label "next" {
}

text @_step_2_to_3_label "next" {
}

# â”€â”€â”€ Constraints â”€â”€â”€

@step_1 -> center_in: canvas

# â”€â”€â”€ Flows â”€â”€â”€

edge @step_1_to_2 {
  text @_step_1_to_2_label "next" {}
  from: @step_1
  to: @step_2
  stroke: #6C5CE7 2
  arrow: end
  curve: smooth
  flow: pulse 1200ms
}
edge @step_2_to_3 {
  text @_step_2_to_3_label "next" {}
  from: @step_2
  to: @step_3
  stroke: #6C5CE7 2
  arrow: end
  curve: smooth
  flow: pulse 1200ms
}
