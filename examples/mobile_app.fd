style body {
  fill: #333333
  font: "Inter" 400 14
}

style bold {
  fill: #1A1A2E
  font: "Inter" 600 16
}

style caption {
  fill: #999999
  font: "Inter" 400 12
}

# â”€â”€â”€ Status bar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
group @status_bar {
  layout: row gap=0 pad=16
  text @time "9:41" {
    fill: #000000
    font: "Inter" 600 15
  }
}

# â”€â”€â”€ Header â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
group @header {
  layout: row gap=0 pad=16
  text @app_name "Discover" {
    fill: #1A1A2E
    font: "Inter" 700 28
  }
  ellipse @avatar {
    spec {
      "User profile picture"
      accept: "tapping opens profile sheet"
      tag: navigation
    }
    w: 36 h: 36
    fill: #6C5CE7
    anim :press {
      scale: 0.92
      ease: spring 200ms
    }
  }
}

