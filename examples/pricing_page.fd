      ## accept: "no credit card required"
      ## status: done
      w: 300 h: 480
      fill: #FFFFFF
      stroke: #E8E8EC 1
      corner: 16
      shadow: (0,2,12,#00000011)
      group @_anon_31 {
        layout: column gap=16 pad=28
        text @_anon_32 "Starter" {
          fill: #6B7280
          font: "Inter" 600 20
