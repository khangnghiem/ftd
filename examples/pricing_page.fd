          text @_anon_40 "Get Started" {
            fill: #333333
            font: "Inter" 600 15
          }
          anim :hover {
            fill: #EDEDF0
            ease: ease_out 150ms
          }
        }
      }
      anim :hover {
        scale: 1.02
        ease: spring 300ms
      }
    }
    rect @tier_pro {
