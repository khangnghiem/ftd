{
  "name": "ftd-vscode",
  "displayName": "FTD â€” Fast Draft",
  "description": "Syntax highlighting, live parser validation, and interactive canvas editor for .ftd (Fast Draft) files",
  "version": "0.1.0",
  "publisher": "khangnghiem",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/khangnghiem/ftd"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "ftd",
    "design",
    "canvas",
    "drawing",
    "animation"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ftd",
        "aliases": [
          "FTD",
          "Fast Draft"
        ],
        "extensions": [
          ".ftd"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ftd",
        "scopeName": "source.ftd",
        "path": "./syntaxes/ftd.tmLanguage.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "ftd.canvas",
        "displayName": "FTD Canvas",
        "selector": [
          {
            "filenamePattern": "*.ftd"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "ftd.showPreview",
        "title": "FTD: Show Tree Preview",
        "icon": "$(list-tree)"
      },
      {
        "command": "ftd.openCanvas",
        "title": "FTD: Open Canvas Editor",
        "icon": "$(paintcan)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "ftd.showPreview",
          "when": "resourceLangId == ftd",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "lint": "tsc --noEmit",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.5.0"
  }
}